import drools.symptoms.Specialty


							// CARDIOLOGY

rule "cardiology_heart_attack"
	dialect "java"
	when
		sp1: Specialty (disease_list.get(0).getDisease().equals("Heart attack"))
	then
		sp1.disease_list.get(0).setSeverity_case(1);
		//System.out.println("Rule 'cardiology_heart_attack' applied over " + sp1);
end

rule "cardiology_heart_failure"
	dialect "java"
	when
		sp1: Specialty (disease_list.get(1).getDisease().equals("Heart failure"))
	then
		sp1.disease_list.get(1).setSeverity_case(2);
		//System.out.println("Rule 'cardiology_heart_failure' applied over " + sp1);
end

